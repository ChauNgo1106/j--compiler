            <LS>
            rhs = additiveExpression()
            { lhs = new JLeftShiftOp(line, lhs, rhs); } |
            <LRS>
            rhs = additiveExpression()
            { lhs = new JLogicalRightShiftOp(line, lhs, rhs); }
