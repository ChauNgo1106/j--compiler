private Type type(): {
    Type type = null;
}
{
    try {
        LOOKAHEAD(<IDENTIFIER> | basicType() <LBRACK> <RBRACK>)
        type = referenceType() |
        type = basicType()
    }
    catch (ParseException e) {
       recoverFromError(new int[] { SEMI, EOF }, e);
    }
